---
- name: Install HTTPD server
  hosts: n2
  become: yes

  tasks:
    - name: Install HTTPD
      yum:
        name: httpd
        state: present

    - name: Start HTTPD
      service:
        name: httpd
        state: started

    - name: Enable HTTPD on boot
      service:
        name: httpd
        enabled: yes
